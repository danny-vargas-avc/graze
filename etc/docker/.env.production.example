# Graze Production Environment
# Copy to .env.production and fill in real values
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(50))"

DEBUG=False
SECRET_KEY=CHANGE_ME
ALLOWED_HOSTS=yourdomain.com
CORS_ORIGINS=https://yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# Database (must match docker-compose db service)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=graze
DB_USER=graze
DB_PASSWORD=CHANGE_ME
DB_HOST=db
DB_PORT=5432

# Mapbox (used at build time for the Vue frontend)
VITE_MAPBOX_TOKEN=CHANGE_ME
